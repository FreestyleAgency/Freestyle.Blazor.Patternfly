@if (String.IsNullOrEmpty(Title) && !ForceAsSection)
{
	<ul class="pf-c-nav__list" @attributes="AdditionalAttributes">
		@ChildContent
	</ul>
}
else
{
	<section class="pf-c-nav__section" aria-labelledby="@_id-title">
		@if (!String.IsNullOrEmpty(Title))
		{
			<h2 class="pf-c-nav__section-title" id="@_id-title">@Title</h2>
		}
		<ul class="pf-c-nav__list" @attributes="AdditionalAttributes">
			@ChildContent
		</ul>
	</section>
}

@code {
	private Guid _id = Guid.NewGuid();

	[Parameter]
	public RenderFragment ChildContent { get; set; }

	[Parameter]
	public string Title { get; set; }

	[Parameter]
	public bool ForceAsSection { get; set; }

	[Parameter(CaptureUnmatchedValues = true)]
	public IDictionary<string, object> AdditionalAttributes { get; set; }
}
